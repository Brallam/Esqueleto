<!DOCTYPE html>
<html>
<%- include('./partials/head') %>
<body>
<%- include('./partials/header') %>

    <div class="container d-flex justify-content-center">
        <div class="container-addProduct">
            <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                  <a class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Crear Producto</a>
                  <a class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Listado de productos</a>
                  <a class="nav-link" id="nav-contact-tab" data-bs-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Listado de usuarios</a>
                </div>
              </nav>
              
              <div class="tab-content" id="nav-tabContent">
                <!-- crear productos -->
                <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                    <div class="row" style="margin: 0px;">
                        <div class="col-8 d-flex justify-content-center">
                            <div class="container-formProduct">
                                <form action="" method="POST">
                                    <label class="label-formulario" for="productName">Nombre del producto</label>
                                    <input class="input-formulario" type="text" name="productName" id="productName" placeholder="Nombre">
                                    <br>
                                
                                    <label class="label-formulario" for="productTalle">Talle</label>
                                    <input class="input-formulario" type="text" name="productTalle" id="productTalle" placeholder="Talle">
                                    
                                    <br>
                                    <label class="label-formulario" for="productColor">Color</label>
                                    <input class="input-formulario" type="text" name="productColor" id="productColor" placeholder="Color">
                                
                                    <br>
                                    <label class="label-formulario" for="productPrecio">Precio</label>
                                    <input class="input-formulario" type="text" name="productPrecio" id="productPrecio" placeholder="Precio">
                                
                                    <br>
                                    <label class="label-formulario" for="productDescription">Descripcion</label>
                                    <input class="input-formulario" type="text" name="productDescription" id="productDescription" placeholder="Descripcion">
                                
                                    <br>
                                    <label class="label-formulario" for="productDiscount">Descuento?</label>
                                    <input class="input-formulario" type="text" name="productDiscount" id="productDiscount" placeholder="Descuento">
                                    <br>
                                    <i class="fas fa-images"></i>
                                    <h6>Carga aqui las imagenes</h6>
                                    <input type="file" name="image" class="imagen" accept="image/png, image/jpg, image/jpeg, image/gif">
                                    <button class="boton-formulario" type="submit">Crear</button>
                                </form>
                            </div>
                        </div>
                        <div class="col-4 d-flex justify-content-center align-items-center contenedor-imgDeMuestra">
                            <figure class="imagenDeMuestras">
                                <img src="" alt="">
                            </figure>
                        </div>
                    </div>
                </div>
                <!-- listado de productos -->
                <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                    <div>
                        <table class="table table-dark">
                            <thead>
                              <tr>
                                <th scope="col">Imagen</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Precio</th>
                                <th scope="col">Accion</th>
                              </tr>
                            </thead>
                            <tbody style="height: 100px;">
                            <!-- tenes que hacer uin foreach del tr -->
                              <tr>
                                <th scope="row">
                                    <figure style="width: 80px;">
                                        <img style="width: 100%;" src="/images/card1.jpg" alt="">
                                    </figure>
                                </th>
                                <td style="padding: 50px 0;">Saco bien lindo</td>
                                <td style="padding: 50px 0;">$50.000</td>
                                <td style="padding: 50px 0;">
                                    <a href="" style="margin-right: 30px;"><i class="bi bi-pencil-fill"></i></a>
                                    <a href=""><i class="bi bi-trash-fill"></i></a>
                                </td>
                              </tr>
                            </tbody>
                          </table>
                    </div>
                </div>
                <!-- listado de usuarios -->
                <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
                    <div>
                        <div>
                            <table class="table table-dark">
                                <thead>
                                  <tr>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">E-mail</th>
                                    <th scope="col">Accion</th>
                                  </tr>
                                </thead>
                                <tbody style="height: 100px;">
                                <!-- tenes que hacer uin foreach del tr -->
                                  <tr>
                                    <th scope="row">Juan</th><!-- nombre -->
                                    <td >juan@juan.com</td><!-- email -->
                                    <td >
                                        <a href="" style="margin-right: 30px;"><i class="bi bi-pencil-fill"></i></a>
                                        <a href=""><i class="bi bi-trash-fill"></i></a>
                                    </td>
                                  </tr>
                                </tbody>
                              </table>
                        </div>
                    </div>
                </div>

              </div>
            
            </div>
        </div>
    </div>


